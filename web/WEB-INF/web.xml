<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controlers.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>ctrl_CreationExercice</servlet-name>
        <servlet-class>controlers.CtrlCreationExercice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>editionExercice</servlet-name>
        <jsp-file>/JSP/editionExercice.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/HTML/index.html</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>listExercice</servlet-name>
        <jsp-file>/JSP/listExercice.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>CtrlListExercice</servlet-name>
        <servlet-class>controlers.CtrlListExercice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlVoirExercice</servlet-name>
        <servlet-class>controlers.CtrlVoirExercice</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>voirExercice</servlet-name>
        <jsp-file>/JSP/voirExercice.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>modifExercice</servlet-name>
        <jsp-file>/JSP/modifExercice.jsp</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>ctrl_CreationExercice</servlet-name>
        <url-pattern>/ctrl_CreationExercice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>editionExercice</servlet-name>
        <url-pattern>/editionExercice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>listExercice</servlet-name>
        <url-pattern>/listExercice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlListExercice</servlet-name>
        <url-pattern>/CtrlListExercice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlVoirExercice</servlet-name>
        <url-pattern>/CtrlVoirExercice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>voirExercice</servlet-name>
        <url-pattern>/voirExercice</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>modifExercice</servlet-name>
        <url-pattern>/modifExercice</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
