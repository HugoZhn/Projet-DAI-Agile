<?xml version="1.0" encoding="UTF-8"?>
<web-app version="3.1" xmlns="http://xmlns.jcp.org/xml/ns/javaee" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance" xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/javaee http://xmlns.jcp.org/xml/ns/javaee/web-app_3_1.xsd">
    <servlet>
        <servlet-name>NewServlet</servlet-name>
        <servlet-class>controlers.NewServlet</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlInscriptionAdminClient</servlet-name>
        <servlet-class>controlers.CtrlInscriptionAdminClient</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>CtrlListeClients</servlet-name>
        <servlet-class>controlers.CtrlListeClients</servlet-class>
    </servlet>
    <servlet>
        <servlet-name>formInscriptionAdminClient</servlet-name>
        <jsp-file>/JSP/formInscriptionAdminClient.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>afficherClientsAdmin</servlet-name>
        <jsp-file>/JSP/afficherClientsAdmin.jsp</jsp-file>
    </servlet>
    <servlet>
        <servlet-name>Index</servlet-name>
        <jsp-file>/HTML/index.html</jsp-file>
    </servlet>
    <servlet-mapping>
        <servlet-name>NewServlet</servlet-name>
        <url-pattern>/NewServlet</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlInscriptionAdminClient</servlet-name>
        <url-pattern>/CtrlInscriptionAdminClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>CtrlListeClients</servlet-name>
        <url-pattern>/CtrlListeClients</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>formInscriptionAdminClient</servlet-name>
        <url-pattern>/formInscriptionAdminClient</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>afficherClientsAdmin</servlet-name>
        <url-pattern>/afficherClientsAdmin</url-pattern>
    </servlet-mapping>
    <servlet-mapping>
        <servlet-name>Index</servlet-name>
        <url-pattern>/Index</url-pattern>
    </servlet-mapping>
    <session-config>
        <session-timeout>
            30
        </session-timeout>
    </session-config>
    <welcome-file-list>
        <welcome-file>index.html</welcome-file>
    </welcome-file-list>
</web-app>
